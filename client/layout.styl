containerLeft = 10%
containerWidth = 85%

html, body
  height 100%
  width 100%
  background-color #02004a

#container
  color white
  max-width 1000px
  min-height 1000px
  margin 0 auto
  background-image: url(/window.jpg), url(/stairs.jpg);
  background-position: 10px 30px, 0 350px;
  background-repeat: no-repeat;

  a
    color white

  #header
    height 310px
    margin-left containerLeft
    width containerWidth
    position relative
    font-family "Courier New", Courier, monospace
    font-size 25px

    span
      position absolute

    .header-1
      top 80px
      left 100px
    .header-2
      top 120px
      left 25px
    .header-3
      top 160px
      left 90px
    .header-4
      top 220px
      left 300px

    .word
      color #3f3d75
      font-size 22px

    .word-1
      top 25px
      left 80px
      transform rotate(-10deg)
    .word-2
      top 25px
      left 250px
      transform rotate(10deg)
    .word-3
      top 25px
      left 460px
      transform rotate(-10deg)
    .word-4
      top 25px
      left 620px
      transform rotate(10deg)
    .word-5
      top 180px
      left 600px
      transform rotate(-10deg)
    .word-6
      top 200px
      left 50px
      transform rotate(10deg)

  #nav
    margin-left containerLeft
    width containerWidth

    ul
      background-color white
      list-style-type none
      margin 0 0 20px 0
      padding 5px 0 5px 15px
      color #6aaed9

    li
      display inline
      white-space nowrap
    a
      color black
      margin 0 10px

  #content
    margin-left containerLeft
    width containerWidth
    background-color white
    color black
    padding 25px

.home-container
  margin-left containerLeft
  width containerWidth
  position relative

  a
    font-family "Courier New", Courier, monospace
    float right

  .home-bg
    position absolute
    width 100%
    height 100%
    background-color #6aaed9
    opacity 0.7
    z-index 1
    top 0
    left 0

  .home-content
    position relative
    z-index 2

  .home
    position absolute
    overflow hidden
    padding 10px
    min-height 100px
    h2, h3
      padding 0
      margin 0 0 5px 0
      font-size 22px

  .home-1
    left -10%
    top 10px
    width 40%
  .home-2
    left 31%
    top 25px
    width 38%
  .home-3
    left 70%
    top 10px
    width 30%
    ul
      list-style-type none
      margin 0
      padding-left 13px

@media (max-width: 760px)
  #container
    #header, #nav, #content
      margin-left 0
      width 100%
    #header
      height auto
      .header
        position static
        display inline-block
        margin 10px
      .word
        display none
  .home-container
    margin-left 0
    width 100%
  .home-container .home
    position static
    width 100%
    margin 10px